@{
}
<h2>Categories List</h2>

<a class="btn btn-success" asp-action="Create"> Add New</a>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CaregoryId</td>
                <td>@category.CaregoryName</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@category.CaregoryId">Edit</a>
               
                    <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.CaregoryId"
                          method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>