@{
}
<h2>Product List</h2>
<a class="btn btn-success" asp-action="Create"> Add New</a>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Category?.CategoryName</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>               
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>

                    <form asp-controller="Category" asp-action="Delete" asp-route-id="@product.ProductId"
                          method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>